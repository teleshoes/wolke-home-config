#!/usr/bin/perl
use strict;
use warnings;
use File::Basename qw(basename);

my $EXEC = basename $0;

my $usage = "Usage:
  $EXEC -h | --help
    show this message

  $EXEC
    run: xset dpms force off
";

sub main(@){
  while(@_ > 0){
    my $arg = shift @_;
    if($arg =~ /^(-h|--help)$/){
      print $usage;
      exit 0;
    }else{
      die "$usage\nERROR: unknown arg $arg\n";
    }
  }

  exec "xset dpms force off";
}

&main(@ARGV);
