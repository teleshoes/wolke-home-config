#!/usr/bin/perl
use strict;
use warnings;

my $HOSTS_FILE = '/etc/hosts';

my $escribe = {
  'garuda'    => '10.1.11.11',
  'dev'       => '10.1.12.19',
  'dev1'      => '172.18.10.91',
  'datadict'  => '10.1.12.21',
  'source'    => '10.1.12.10',
  'trac'      => '10.1.12.11',
  'build'     => '10.1.12.20',
  'demo'      => '10.1.7.11',
  'proxy'     => '10.1.4.8',
  'web'       => '10.1.14.20',
  'backupa'   => '10.1.4.13',
#  'cchit'     => '10.1.13.19',
#  'stage'     => '10.1.13.12',
#  'demo-edge' => '10.1.7.12',
#  'qa'        => '10.1.13.13',
};

open FH, "< $HOSTS_FILE" or die "Could not open $HOSTS_FILE for reading";
my @lines = <FH>;
close FH;

#remove lines with comment #escribe-host at the end
for my $line(@lines){
  $line = '' if $line =~ /#escribe-host$/;
}

for my $host(keys %$escribe){
  my $ip = $$escribe{$host};
  push @lines, "$ip\t$host.escribe.com #escribe-host\n";
  push @lines, "$ip\t$host #escribe-host\n";
}

print @lines;

open FH, "> $HOSTS_FILE" or die "Could not write to $HOSTS_FILE";
print FH @lines;
close FH;
