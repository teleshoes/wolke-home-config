#!/usr/bin/perl
use strict;
use warnings;

sub run(@);

my @hostCmdEntries = (
  ["ipmagic t430s",  undef],
  ["ipmagic nuc",    undef],
  ["seedbox --host", undef],
  ["ipmagic s5",     "android"],
  ["ipmagic s5",     "root"],
  ["ipmagic raspi",  "pi"],
  ["ipmagic raspi",  "root"],
);

sub main(@){
  die "Usage: $0\n" if @_ > 0;
  my @pubkeyFiles = `ls $ENV{HOME}/.ssh/*.pub`;
  chomp foreach @pubkeyFiles;
  print "Copying these pubkeys:\n" . (join "\n", @pubkeyFiles) . "\n\n";
  for my $entry(@hostCmdEntries){
    my ($cmd, $user) = @$entry;
    print "\n\ncopying pubkeys for $cmd" . (defined $user ? " ($user)" : "") . "\n";
    my $hostname = `$cmd`;
    chomp $hostname;
    die "Error running '$cmd'\n" if $? != 0;
    die "Malformed hostname from '$cmd': $hostname\n" if $hostname !~ /\w/;

    my $host = $hostname;
    $host = "$user\@$host" if defined $user;
    run "rsync", "-avP", @pubkeyFiles, "$host:~/.ssh/";
    run "ssh", $host, "cat ~/.ssh/*.pub > ~/.ssh/authorized_keys";
  }
}

sub run(@){
  print "@_\n";
  system @_;
  die "Error running \"@_\"\n" if $? != 0;
}

&main(@ARGV);
