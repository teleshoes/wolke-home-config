#!/usr/bin/perl
use strict;
use warnings;

my $usage ="Usage:
  $0 -h|--help
    show this message

  $0 APK_FILE
    show apk info with aapt
";

sub main(@){
  my $apkFile;
  while(@_ > 0){
    my $arg = shift;
    if($arg =~ /^(-h|--help)$/){
      print $usage;
      exit 0;
    }elsif(-f $arg){
      die "ERROR: duplicate APK_FILE args\n" if defined $apkFile;
      $apkFile = $arg;
    }else{
      die "ERROR: unknown arg $arg\n";
    }
  }

  die "ERROR: APK_FILE is required\n" if not defined $apkFile;

  system "aapt dump badging \"$apkFile\" | head -3";
}

&main(@ARGV);
