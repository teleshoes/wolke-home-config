#!/usr/bin/perl
use strict;
use warnings;

my $PROC_PTRN = "Kingdom.*x86";

sub main(@){
  my @pids = `pgrep '$PROC_PTRN'`;
  chomp foreach @pids;

  my $isPaused = 0;
  for my $pid(@pids){
    die "ERROR: malformed pid $pid\n" if $pid !~ /^\d+$/;
    my $status = `ps -o state= -p $pid`;
    if($status =~ /^T$/){
      $isPaused = 1;
      last;
    }
  }

  for my $pid(@pids){
    if($isPaused){
      system "kill", "-CONT", $pid;
    }else{
      system "kill", "-STOP", $pid;
    }
  }
}

&main(@ARGV);
