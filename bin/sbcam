#!/usr/bin/perl
use strict;
use warnings;

sub run(@);

my $ipmagicConf = "nuc";

my $usage = "Usage:
  $0 [FILENAME]
    run `streamer` on `ipmagic $ipmagicConf` or `seedbox -r`, copy the image over
    if FILENAME is specified, move to FILENAME
    if FILENAME is NOT specified, run `feh` on the image
";

sub main(@){
  my $destFile = shift;
  die $usage if @_ > 0;

  my $d = `date +%Y-%m-%d_%s`;
  chomp $d;
  my $file = "sbcam-$d.jpeg";

  my @camCmd = ("streamer", "-f", "jpeg", "-o", "/tmp/$file");

  my $ipmagicHost = `ipmagic $ipmagicConf -r 0 2>/dev/null`;
  chomp $ipmagicHost;

  if($ipmagicHost =~ /\w/){
    run "ipmagic", $ipmagicConf, @camCmd;
    run "scp", "$ipmagicHost:/tmp/$file", "/tmp/$file";
  }else{
    my $sbHost = `seedbox`;
    chomp $sbHost;

    run "seedbox", "-r", "bash -c '"
      . " echo running streamer on `hostname`;"
      . " @camCmd;"
      . " scp /tmp/$file $sbHost:~/$file;"
      . "'";

    run "scp", "$sbHost:~/$file", "/tmp/$file";
  }

  if(defined $destFile){
    run "mv", "/tmp/$file", $destFile;
  }else{
    run "feh", "/tmp/$file";
  }
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
