#!/usr/bin/perl
use strict;
use warnings;

sub main(@){
  my $dir = shift || "$ENV{HOME}";
  $dir = "$ENV{PWD}/$dir" if not $dir =~ m|^/|;
  mkdir $dir;
  chdir $dir;

  my $date = `date +%Y%m%d`;
  chomp $date;

  my $maxNum = '000';
  for my $ss(`ls`){
    if($ss =~ /(?:.*\/)?  $date  _  (\d+)  \.  (png|jpg|jpeg)$/xi){
      if($1 > $maxNum){
        $maxNum = $1;
      }
    }
  }

  $maxNum++;

  my $file = "${dir}/${date}_${maxNum}.png";
  print "Taking screenshot and putting it in $file\n";
  system "scrot $file";
}

&main(@ARGV);
