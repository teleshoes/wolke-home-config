#!/usr/bin/perl
use strict;
use warnings;

my $CACHE_DIR = "$ENV{HOME}/.cache/ddr-radar-feet";

sub run(@);
sub readProcLine(@);

sub main(@){
}

sub run(@){
  print "@_\n";
  system @_;
  if($? != 0){
    die "error running \"@_\"\n";
  }
}

sub readProcLines(@){
  my @cmd = @_;
  open CMD, "-|", @cmd or die "ERROR: \"@cmd\" failed\n$!\n";
  my @lines = <CMD>;
  close CMD;
  return @lines;
}

&main(@ARGV);
