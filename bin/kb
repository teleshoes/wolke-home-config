#!/usr/bin/perl
use strict;
use warnings;

my $DIR = "$ENV{HOME}/.xmonad/lib";
my $CACHE_FILE = "/tmp/xmonad-keybindings-prettyprint";

my $USAGE = "Usage:
  $0 -h | --help
    show this message

  $0
    -generate $CACHE_FILE using `runghc Bindings.hs | cols`
    -print to console
    -open with `bigtext`
";

sub main(@){
  while(@_ > 0){
    my $arg = shift @_;
    if($arg =~ /^(-h|--help)$/){
      print $USAGE;
      exit 0;
    }else{
      die "$USAGE\nERROR: unknown arg $arg\n";
    }
  }

  chdir $DIR;

  system "rm", $CACHE_FILE;
  system ""
    . "runghc -main-is Bindings Bindings.hs"
    . " | grep -v '^Key Bindings\$'"
    . " | sed 's/^    //'"
    . " | cols"
    . " > $CACHE_FILE"
    ;

  system "cat $CACHE_FILE";
  system "bigtext", $CACHE_FILE;
}

&main(@ARGV);
