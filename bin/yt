#!/usr/bin/perl
use strict;
use warnings;

sub main(@){
  my $audioOnly = 0;
  my @ytArgs;
  for my $arg(@_){
    if($arg =~ /^(-x|--extract-audio)$/){
      $audioOnly = 1;
    }else{
      push @ytArgs, $arg;
    }
  }

  if($audioOnly){
    exec "yt-dlp", "-x", @ytArgs;
  }else{
    exec "yt-dlp", "-f", "bv*[height=1080]+ba", @ytArgs;
  }
}

&main(@ARGV);
