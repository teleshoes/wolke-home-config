#!/usr/bin/perl
use strict;
use warnings;
use utf8;

my $height = 41;

sub main(@){
  my @lines = <STDIN>;
  chomp foreach @lines;

  my @cols;
  my $col = [];
  for (my $i=0; $i<@lines; $i++){
    push @$col, $lines[$i];
    if(($i > 0 and $i % ($height-1) == 0) or $i == $#lines){
      push @cols, $col;
      $col = [];
    }
  }

  my @maxCols;
  for my $col(@cols){
    my $max=0;
    for my $i(@$col){
      chomp $i;
      $max = length $i if length $i > $max;
    }
    push @maxCols, $max;
  }

  my $out = "";
  for(my $i=0; $i<$height; $i++){
    for(my $c=0; $c<@cols; $c++){
      my $max = $maxCols[$c];
      my $s = ${$cols[$c]}[$i];
      $s = '' if not defined $s;
      utf8::decode $s;
      $s .= ' ' x ($max - length $s);
      $out .= "$s | ";
    }
    $out .= "\n";
  }

  print $out;
}

&main(@ARGV);
