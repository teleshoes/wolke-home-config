#!/usr/bin/perl
use strict;
use warnings;

my $ssDir = "$ENV{HOME}/install/bin";

sub getScript($);

my $dir = "$ENV{HOME}/install/bin";

my $usage = "Usage:
  $0 SCRIPT_NAME ARGS
    run '$ssDir/SCRIPT_NAME ARGS'
";

sub main(@){
  if(@_ > 0){
    my $scriptName = shift;
    my @args = @_;

    exec getScript($scriptName), @args;
  }else{
    die $usage;
  }
}

sub getScript($){
  return "$ssDir/$_[0]";
}

&main(@ARGV);
