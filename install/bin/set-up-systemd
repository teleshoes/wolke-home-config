#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $logindConfFile = "/etc/systemd/logind.conf";
my $journaldConfFile = "/etc/systemd/journald.conf";

sub main(@) {
    getRoot @_;

    run "apt-get", "remove", "sysvinit-core";
    run "apt-get", "install", "systemd-sysv";

    editSimpleConf $logindConfFile, "DisableAcpiKeyHandling", {
      HandlePowerKey => "ignore",
      HandleSuspendKey => "ignore",
      HandleHibernateKey => "ignore",
      HandleLidSwitch => "ignore",
    };

    editSimpleConf $journaldConfFile, "journald-log-max-size", {
      SystemMaxUse => "100M",
    };
}

main @ARGV;

