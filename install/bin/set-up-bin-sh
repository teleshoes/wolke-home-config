#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $GOOD = "dash";
my $BAD = "bash";

sub main(@) {
  getRoot @_;

  my $link = readlink "/bin/sh";
  print "\n\n/bin/sh is $link\n";
  if($link eq $BAD){
    print "CHANGING $BAD => $GOOD!!!\n";

    print "rm /bin/sh\n";
    system "rm", "/bin/sh";

    print "ln -s $GOOD /bin/sh\n";
    system "ln", "-s", $GOOD, "/bin/sh";

    my $link = readlink "/bin/sh";
    print "\n\n/bin/sh is $link\n";
  }else{
    print "not doing anything\n";
  }
}

&main(@ARGV);
