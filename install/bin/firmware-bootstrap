#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
  getRoot @_;

  my $dir = getInstallPath "firmware-bootstrap";
  my @debs = grep {-f $_} glob "$dir/*.deb";
  run "dpkg", "-i", $_ foreach @debs;
  my @lines = procChomp "cat $dir/modules";
  foreach my $mod(@lines){
    run "modprobe", "-r", $mod;
    run "modprobe", $mod;
  }
}

&main(@ARGV);
