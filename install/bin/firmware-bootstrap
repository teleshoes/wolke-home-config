#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
  getRoot @_;

  my $dir = getInstallPath "firmware-bootstrap";
  my @debs = glob "$dir/*.deb";
  run "dpkg", "-i", $_ foreach @debs;
  foreach my $mod(procLines "cat $dir/modules"){
    run "modprobe", "-r", $mod;
    run "modprobe", $mod;
  }
}

&main(@ARGV);
