#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $minVersion = "1.8.1";

sub versionCmp($$);

sub main(@) {
  runAptGet qw(-y install
    steam
    mesa-vulkan-drivers
    libgl1-mesa-dri   libgl1-mesa-dri:i386
    libgl1-mesa-glx   libgl1-mesa-glx:i386
    libsdl2-2.0-0     libsdl2-2.0-0:i386
  );
}

&main(@ARGV);
