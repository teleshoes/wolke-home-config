#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
  getRoot @_;

  print "\n\nInstalling tp-smapi\n\n";
  runAptGet "-y", "install", "tp-smapi-dkms";

  print "\n\nInstalling tpacpi-bat\n\n";
  installFromGit "https://github.com/teleshoes/tpacpi-bat.git";

  print "\n\nInstalling tp-battstat\n\n";
  installFromGit "https://github.com/teleshoes/tpbattstat.git", ''
    . " ./install.sh;"
    . " cd led-controls; ./install-led-controls.sh;"
    ;

  print "\n\nInstalling thinkpad_acpi\n\n";
  installFromGit "https://github.com/teleshoes/thinkpad_acpi.git";

  print "\n\nAdding tp_smapi to module list\n\n";
  editFile "/etc/modules", sub{
    my $cnts = shift;
    replaceOrAddLine $cnts, "tp[-_]smapi", "tp_smapi";
    return $cnts;
  };
}

&main(@ARGV);
