#!/usr/bin/perl
use warnings;
use strict;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
  getRoot @_;

  runScript "install", "net";

  my $wifiConf = getHome() . "/wifi.conf";

  if(not -f $wifiConf){
    print STDERR "WARNING: missing wifi.conf, restore from backup\n";
  }

  ### disable NetworkManager and connect
  tryrun qw(service network-manager stop);
  run "/usr/local/bin/wauto", "--wired";
}

&main(@ARGV);
