#!/usr/bin/perl
use warnings;
use strict;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    getRoot @_;

    runScript "install", "net";

    if(not -f "$ENV{HOME}/wifi.conf"){
      my $confDir = shift || guessBackupDir;
      run "cp", "-a", "$confDir/$_", $ENV{HOME} for qw(wifi.conf wifi-auto.conf);
      tryrun "cp", "-a", "$confDir/$_", $ENV{HOME} for qw(wvdial.conf);
    }

    ### disable NetworkManager and connect
    tryrun qw(service network-manager stop);
    run "/usr/local/bin/wauto", "--wired";
}

&main(@ARGV);
