#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;
use File::Basename qw(basename);

sub doInstalls($);

my $pkgDir = getInstallPath "apt-packages";

my $packageLists = join '', map {"$_\n"} globFilesBasename("$pkgDir/*");
my $usage = "Usage:
  $0 [FILTER]
    FILTER: regex to match package list from among:\n$packageLists
";

sub main(@) {
  getRoot @_;

  my $filter = shift || "";

  if ($filter =~ /^(-h|--help)$/) {
    print "$usage\n";
    exit 0;
  }
  die $usage if @_ > 0;

  doInstalls $filter;
}

sub doInstalls($) {
  my $filter = shift;

  my %packages = readConfDir $pkgDir;
  for my $group (sort grep {/$filter/i} keys %packages) {
    print "### installing $group\n";
    print "########################################\n";
    my @pkgs = map {s/\s*//g; $_} @{$packages{$group}};
    my $target = undef;
    if(@pkgs > 0 and $pkgs[0] =~ /^TARGET\s*=\s*([^ \s]+)\s*$/){
      $target = $1;
      shift @pkgs
    }
    my @targetCmd = defined $target ? ("-t", $target) : ();
    runAptGet "-y", @targetCmd, "install", @pkgs;
    print "\n";
  }
}

&main(@ARGV);
