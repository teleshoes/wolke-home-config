#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
  my $alt = {
    pager => "/bin/less",
    "x-cursor-theme" => "/usr/share/icons/Adwaita/cursor.theme",
    "x-www-browser" => "/usr/bin/firefox",
    "editor" => "/usr/libexec/vim/vim.basic",
  };

  for my $name(keys %$alt){
    run "sudo", "update-alternatives", "--set", $name, $$alt{$name};
  }
}

main @ARGV;
