#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub userfile($) {
    my ($user) = @_;
    join "\n"
      , "Defaults\tenv_keep += HOME"
      , "Defaults\tenv_keep += SSH_AUTH_SOCK"
      , "$user\tALL=(ALL) ALL"
      , ""
}

sub nopasswdFileCnts($@) {
    my ($user, @conf) = @_;
    join "\n", ((map {"$user\tALL=(ALL) NOPASSWD: $_"} @conf), "")
}

sub main(@) {
    getRootSu @_;

    my $user = getUsername;

    tryrun "rm /etc/sudoers.d/*";

    writeFile "/etc/sudoers.d/$user", userfile $user;

    my $confDir = getInstallPath "sudo-nopasswd";
    my %confs = readConfDir $confDir;
    for my $sufix (sort keys %confs) {
        my $cnts = nopasswdFileCnts $user, @{$confs{$sufix}};
        writeFile "/etc/sudoers.d/$user-$sufix", "$cnts";
    }

    run "chmod 440 /etc/sudoers.d/*";
}

&main(@ARGV);
