#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@){
  getRoot();

  #timezone
  symlinkFile "/usr/share/zoneinfo/America/New_York", "/etc/localtime";

  symlinkFile "$ENV{HOME}/conf/opt/escribe", "/opt/escribe";
  symlinkFile "$ENV{HOME}/conf/var-opt/escribe", "/var/opt/escribe";

  #fake perl-5.10 executable that runs modern perl
  symlinkFile "perl", "/usr/bin/perl-5.10";
}

&main(@ARGV);
