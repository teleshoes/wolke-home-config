#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $FSTAB = ""
  . "# /etc/fstab: static file system information.\n"
  . "# <file system> <mount point>   <type>  <options>       <dump>  <pass>\n"
  . "tmpfs       /tmp            tmpfs   defaults,noatime,nodev,nosuid,mode=1777 0 0\n"
  . "LABEL=root  /               btrfs   defaults,noatime 0 1\n"
  . "LABEL=home  /home           btrfs   defaults,noatime 0 2\n"
  ;

my $ENTRIES_BY_MACHINE_TYPE = {
};

sub main(@){
  getRoot();

  my $machineType = getMachineType();
  if(defined $$ENTRIES_BY_MACHINE_TYPE {$machineType}){
    $fstab .= $$ENTRIES_BY_MACHINE_TYPE{$machineType};
  }

  open FH, "> /etc/fstab";
  print FH $FSTAB;
  close FH;
}

&main(@ARGV);
