#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $INPUTRC_FILE = "/etc/inputrc";

sub main(@){
  die "Usage: $0\n" if @_ > 0;
  getRoot();
  editFile $INPUTRC_FILE, "disable-bracketed-paste", sub {
    my $contents = shift;
    replaceOrAddLine $contents, '^set enable-bracketed-paste.*', 'set enable-bracketed-paste off';
    return $contents;
  };
}

&main(@ARGV);
