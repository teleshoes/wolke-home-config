#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@){
  die "Usage: SUB [ARG ARG ..]\n" if @_ == 0;
  my $sub = shift;
  my $subRef;
  eval{ $subRef = \&{$sub} };
  if(not defined $subRef){
    die "ERROR: unknown sub $sub\n";
  }

  my $val = &{$subRef}(@_);
  if(defined $val){
    if(ref($val) eq 'ARRAY'){
      print "@$val\n";
    }else{
      chomp $val;
      print "$val\n";
    }
  }
}
&main(@ARGV);
