#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $clientConfFile = "/etc/pulse/client.conf";
my $clientConf = {
  'autospawn' => "no",
};

my $daemonConfFile = "/etc/pulse/daemon.conf";
my $daemonConf = {
  'realtime-scheduling'        => "yes",
  'realtime-priority'          => "5",
  'default-sample-format'      => "s16le",
  'default-sample-rate'        => "44100",
  'default-sample-channels'    => "2",
  'default-fragments'          => "5",
  'default-fragment-size-msec' => "2",
};

sub main(@) {
  getRoot @_;

  editFile $clientConfFile, undef, sub {
    my $c = shift;
    for my $key(sort keys %$clientConf){
      replaceOrAddLine $c, "\\s*;?\\s*$key\\s*=", "$key = $$clientConf{$key}";
    }
    $c;
  };

  editFile $daemonConfFile, undef, sub {
    my $c = shift;
    for my $key(sort keys %$daemonConf){
      replaceOrAddLine $c, "\\s*;?\\s*$key\\s*=", "$key = $$daemonConf{$key}";
    }
    $c;
  };
}

&main(@ARGV);
