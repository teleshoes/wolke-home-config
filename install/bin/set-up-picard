#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $SRC_CONFIG = "$ENV{HOME}/.picard";
my $DEST_CONFIG_DIR = "$ENV{HOME}/.config/MusicBrainz";
my $DEST_CONFIG = "$DEST_CONFIG_DIR/Picard.conf";

sub main(@){
  my @pkgs = qw(picard libchromaprint-tools);
  run "sudo", "apt-get", "install", @pkgs;

  my $now = time;
  system "mkdir", "-p", $DEST_CONFIG_DIR;
  run "mv", $DEST_CONFIG, "$DEST_CONFIG-bak-$now";
  run "cp", $SRC_CONFIG, $DEST_CONFIG;
}

&main(@ARGV);
