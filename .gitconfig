[user]
    name = Mike Zuser
    email = mikezuser@gmail.com
[core]
    pager = less
[alias]
    a = add
    s = status
    c = commit
    d = diff
    ds = diff --staged
    r = reset HEAD
    co = checkout
    b = branch
    m = merge --no-commit
    l = log --color --decorate
    lf = log --color --decorate --follow
    ln = log --color --decorate --name-status -M
    lt = log --color --decorate --name-status -M \
             --notes=review --notes=bug --notes=dd
    dn = pull --no-commit
    up = push
    stat = show --stat
    vimdiff = difftool -y -t vimdiff
    meld = difftool -t meld
    graph = log --graph --oneline --color --decorate
    showm = show -M --summary
    ignored = ls-files --others
    pullr = !git stash && git pull -r && git stash pop
[color]
    diff = true
    status = true
    log = true
[push]
    default = simple
[gui]
    gcwarning = false
